<!doctype html>
<html lang="ru">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<title>ЕГР поиск</title>

		<link rel="stylesheet" href="css/normalize.css">
		<link rel="stylesheet" href="css/main.css">
	</head>
	<body>
		<div class="main-container">

			<table class="table-header">
				<tr>
					<td class="regNumber">Рег. номер</td>
					<td class="name">Наименование юридического лица/Ф.И.О. индивидуального предпринимателя</td>
					<td class="regAuthority">Регистрирующий орган</td>
					<td class="reqDate">Дата регистрации</td>
					<td class="state">Состояние</td>
					<td class="expDate">Дата исключения</td>
				</tr>
			</table>

		{{#results}}
			<div class="result">
				<div class="req-name">{{name}}</div>
				{{^data}}
				<div class="not-found">Не найдено</div>
				{{/data}}
				{{#data}}
				<table>
				{{/data}}
				{{#data}}
					<tr class="{{#expired}}expired{{/expired}} {{#valid}}valid{{/valid}} ">
						<td class="regNumber">{{regNumber}}</td>
						<td class="name">{{name}}</td>
						<td class="regAuthority">{{regAuthority}}</td>
						<td class="reqDate">{{reqDate}}</td>
						<td class="state">{{state}}</td>
						<td class="expDate">{{expDate}}</td>
					</tr>
				{{/data}}
				{{#data}}
				</table>
				{{/data}}
			</div>
		{{/results}}

		</div>

		<script src="js/main.js"></script>
	</body>
</html>
